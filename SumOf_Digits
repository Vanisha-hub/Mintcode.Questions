import java.util.*;
 public class SumOf_Digits{
       
    public static void main(String[] args){
        Scanner sc=new Scanner (System.in);
        System.out.println("Enter a Number:");
        int number=sc.nextInt();
        int sum = 0;
        while (number!=0){
        int digit = number%10;
        sum += digit;
        number/=10;
        }
        System.out.println("The sum of the digits is :" + sum);
        sc.close();
    } 
}
